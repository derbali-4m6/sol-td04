<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Numero2Activity">

    <TextView
        android:id="@+id/numero2_lbl_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:lines="5"
        android:text="Message"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:onClick="btnClickRetour"
        android:text="Retour"
        app:layout_constraintEnd_toEndOf="@+id/numero2_lbl_message"
        app:layout_constraintStart_toStartOf="@+id/numero2_lbl_message"
        app:layout_constraintTop_toBottomOf="@+id/numero2_lbl_message" />
</androidx.constraintlayout.widget.ConstraintLayout>